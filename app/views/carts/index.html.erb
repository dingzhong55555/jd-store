<div class="row">
  <div class="col-md-12">

    <h2> 购物车 </h2>
    <div class="pull-right">
      <%= link_to " 清空购物车", clean_carts_path, method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-default" %>
    </div>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
          <th>操作</th>
        </tr>
      </thead>
      <tbody>

        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                  <% end %>
<% end %>
</td>
<td>
<%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
</td>
<td>
<%= cart_item.product.price %>
</td>
<td>
  <%= link_to "+", add_quantity_cart_item_path(cart_item.product), method: :post, :class => "btn btn-default" %>
  <%= cart_item.quantity %>
  <%= link_to "-", reduce_quantity_cart_item_path(cart_item.product), method: :post, :class => "btn btn-default" %>
</td>
<td><%= link_to "Delete", cart_item_path(cart_item.product.id), method: :delete, data: {conform: "Are you sure?"} %></td>
</tr>
<% end %>

</tbody>
</table>

<br>

<div class="total clearfix">
<span class="pull-right">
<span>
  总计：<%= current_cart.render_total_price %> 元
</span>
</span>
</div>

<hr>

<div class="checkout clearfix">
<%= link_to("确认结账", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
</div>
</div>
</div>
